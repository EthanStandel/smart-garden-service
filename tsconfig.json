{
    "compilerOptions": {
        "target": "es6",
        "lib": [ "esnext" ],
        "typeRoots": [ "./node_modules/@types" ],
        "experimentalDecorators": true,
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "preserve",
        "outDir": "./build",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true
    }
}
